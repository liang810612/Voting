#include <utility>  // make_pair, pair

#include "Voting.h"

// ------------
// voting_read
// ------------

bool voting_read (std::istream& r) {
    std::string caseNum;
    if (!r)
        return false;
    std::getline(r, caseNum);
    return true; 
}
	

